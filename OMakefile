
.SUBDIRS: hayamiz

LATEX = platex -interaction=batchmode
DVIPDFM = dvipdfmx
# BIBTEX = jbibtex
DVIPDFMFLAGS    = -p b5 -r 2400 # otf-ipaex.map # -f dvipdfm_dl14.map

.PHONY: clean build

clean:
  rm -f *.aux *.log *.bbl *.toc *.nav *.fls *.out *.snm *.vrb *.dvi *.pdf *.blg

build: book.dvi book.pdf

LaTeXDocument(book, book)

book-ready.pdf: book.dvi
  $(DVIPDFM) -p b5 -r 2400 -f kozuka.map -o $@ $<

.DEFAULT: build
